<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="283.0" prefWidth="240.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aydin.firebasedemospring2024.RegistrationController" stylesheets="@style.css">
    <children>
        <Label text="Register" />
      <TextField fx:id="nameField" promptText="Name" />
      <TextField fx:id="emailField" promptText="Email" />
      <PasswordField fx:id="passwordField" promptText="Password" />
        <Button fx:id="registerButton" mnemonicParsing="false" onAction="#registerButtonClicked" prefHeight="30.0" prefWidth="100.0" text="Register" />
      <Label fx:id="loginLabel" onMouseClicked="#loginButtonClicked" text="Login if you have an account here." />
      <Label fx:id="noticeLabel" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
